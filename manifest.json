{
  "manifest_version": 3,
  "name": "mystorage",
  "version": "1.0",
  "description": "A cross-site key-value storage accessible from the console.",
  "permissions": [
    "storage"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "content.js"
      ],
      "run_at": "document_start"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "injected.js"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "128": "img/icon.png"
    }
  },
  "icons": {
    "128": "img/icon.png"
  }
}